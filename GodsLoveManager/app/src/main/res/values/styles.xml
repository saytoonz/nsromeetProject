<resources>

    <!-- Base application theme. -->
    <style name="BasicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="AboutCategory">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">72dp</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
