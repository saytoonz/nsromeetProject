<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.nsromapa.nsromeet.activities.MeetingWithIDActivity">

    <include layout="@layout/cus_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="@string/basic_profile"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">


                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"/>

                    <ImageView
                        android:id="@+id/change_profile_img"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom|end"
                        android:foregroundGravity="bottom"
                        android:src="@drawable/icon_add_new_100px" />

                </FrameLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints="@string/enter_meeting_id"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:hint="@string/name"
                android:textColor="@color/colorAccent"
                android:inputType="text"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:text="@string/username"
                android:textColor="@color/colorAccent"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:text="@string/phone"
                android:textColor="@color/colorAccent"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />

            <Button
                android:id="@+id/update_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_new_meet_bg"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="@string/password"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/old_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints="@string/old_pass"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:hint="@string/old_pass"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />


            <EditText
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints="@string/new_pass"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:hint="@string/new_pass"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />


            <EditText
                android:id="@+id/confirm_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints="@string/confirm_password"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="22sp" />

            <Button
                android:id="@+id/change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_new_meet_bg"
                android:backgroundTint="@color/colorAccent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:text="@string/school_profile"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idTypeTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_id"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/idTypeBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="42dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/schoolTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_school"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/schoolBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/facultyTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_faculty"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/facultyBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/departmentTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_department"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/departmentBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/classTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_class"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/classBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/levelTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:hint="@string/no_level"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/levelBtn"
                    android:src="@drawable/icon_compose_48px"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/bg_sharp_curve_coners_bg"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="52dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
