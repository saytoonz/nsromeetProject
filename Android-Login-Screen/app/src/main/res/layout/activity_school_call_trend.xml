<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.nsromapa.nsromeet.activities.SchoolSetupActivity">

    <include layout="@layout/cus_toolbar_back_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/enterMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">


            <TextView
                android:id="@+id/joinVideoTV"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bg_sharp_curve_coners_bg"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/connerVideo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:rotation="290"
                android:src="@drawable/icon_video_call_100px"
                android:tint="@color/meet_orange" />

            <ImageView
                android:id="@+id/connerStar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-18dp"
                android:rotation="296"
                android:src="@drawable/icons_christmas_star_100px_1" />

            <ImageView
                android:id="@+id/bottomFlower"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="-20dp"
                android:rotation="296"
                android:src="@drawable/icon_maple_leaf_100px" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/noticeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/continue_to_the_"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/nextLevel"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_new_meet_bg"
            android:backgroundTint="@color/colorAccent"
            android:padding="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/icon_arrow_100px"
            android:tint="@color/white" />

        <Button
            android:id="@+id/level_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_new_meet_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/level_version_of_meet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"/>


    </LinearLayout>
</LinearLayout>
