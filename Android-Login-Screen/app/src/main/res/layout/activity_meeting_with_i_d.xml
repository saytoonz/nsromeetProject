<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.nsromapa.nsromeet.activities.MeetingWithIDActivity">

    <include layout="@layout/cus_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noticeTV"
            android:textSize="12sp"
            android:text="@string/start_meeting_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="14dp"
            android:textAlignment="center"
            android:textAllCaps="false"/>

        <EditText
            android:id="@+id/meeting_id"
            android:hint="@string/enter_meeting_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_sharp_curve_coners_bg"
            android:autofillHints="@string/enter_meeting_id" />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:background="@drawable/bg_new_meet_bg"
            android:backgroundTint="@color/colorAccent"/>

    </LinearLayout>
</LinearLayout>
